.topnav
  a(href='/') E-Voting
  a.active(href='/login') Login
  a(href='/register') Register
  a(href='/about') About Us
 

.container
  .row
    .col-lg-3.col-md-2
    .col-lg-6.col-md-8.login-box
      .col-lg-12.login-key
        i.fa.fa-key(aria-hidden='true')
      .col-lg-12.login-title
        | LOGIN TO DASHBOARD
      .col-lg-12.login-form
        .col-lg-12.login-form
          form(onsubmit='event.preventDefault();login()')
            .form-group
              label.form-control-label USERNAME
              input#username.form-control(type='text')
            .form-group
              label.form-control-label PASSWORD
              input#password.form-control(type='password')
            .col-lg-12.loginbttm
              .col-lg-6.login-btm.login-text
                // Error Message
              .col-lg-6.login-btm.login-button
                button.btn.btn-outline-primary(type='submit') LOGIN
      .col-lg-3.col-md-2
